@model Treading.ViewModel.AuthenticationViewModel

<link href="~/fonts/material-design-iconic-font.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

<!-- Main css -->
<style>
    section {
        padding: 20px 0;
    }
</style>


<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content" style="margin-left: 0px; margin-top: 10px">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <div class="modal-body">
                <section class="sign-in">
                    <div class="container" id="text" style="width:100%;">
                        <div class="signin-content" style="padding-top:11px;">
                            <div class="signin-form">
                                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                                <h2 class="form-title">Sign up</h2>

                                <div class="form-group">
                                    <label for="your_name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                    @Html.TextBoxFor(x => x.Name, new { @placeholder = "Name" })

                                </div>
                                <div class="form-group">
                                    <label for="your_name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                    @Html.TextBoxFor(x => x.Email, new { @placeholder = "Email" })
                                </div>
                                <div class="form-group">
                                    <label for="your_name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                    @Html.TextBoxFor(x => x.Mobile, new { @placeholder = "Phone No" })
                                </div>
                                <div class="form-group">
                                    <label for="your_pass"><i class="zmdi zmdi-lock"></i></label>
                                    @Html.TextBoxFor(x => x.Username, new { @placeholder = "Username", @Id = "users" })
                                </div>
                                <div class="form-group">
                                    <label for="your_pass"><i class="zmdi zmdi-lock"></i></label>
                                    @Html.PasswordFor(x => x.Password, new { @placeholder = "Password", @Id = "passw" })
                                </div>
                                <br />
                                <div class="form-group form-button">
                                    <button type="button" class="btn btn-default" onclick="Register()">Sign up</button>
                                    <button type="button" class="btn btn-default" value="clear">Clear</button>
                                </div>

                            </div>
                        </div>
                    </div>
                </section>
            </div>


        </div>

    </div>
</div>
<script>
 function Register() {
        debugger
        var name = $("#Name").val();
        var email = $("#Email").val();
        var mobile = $("#Mobile").val();
         var users = $("#users").val();
     var pass = $("#passw").val();

        $.ajax({
            url: '@Url.Action("Register", "Authenticate")',
            type: 'POST',
            data: { Name: name, Email: email, Mobile: mobile, Username: users, Password: pass },
            success: function (result) {
            console.log("hello");
                if (users == "" || pass == "" || name == "" || email == "" || mobile == "" ) {
            console.log("Hello");
            $("#AddModel_").html(result);
            $(".modal").css("display", "block");
            $(".fade:not(.show)").css("opacity", "100%");
             $("div.modal-backdrop").css("opacity", "");
            }
            else {
            $("#myModal").hide();
            location.reload();
            }
            }
            });
    }
</script>
